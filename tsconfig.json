{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "lib": ["es2015"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "paths": {
    "@/*": ["src/*"]
  }
}
